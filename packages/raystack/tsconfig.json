{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "isolatedModules": false,
    "paths": {
      "~/*": ["./*"],
      "~/v1/*": ["./v1/*"]
    }
  },
  "include": [".", "v1"],
  "exclude": ["dist", "build", "node_modules"]
}
