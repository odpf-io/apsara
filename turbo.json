{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "www#build": {
      "dependsOn": [
        "@raystack/apsara#build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
      ]
    },
    "@raystack/apsara#build": {
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}